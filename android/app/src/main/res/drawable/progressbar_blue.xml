
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:id="@android:id/background">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#F3F4F5"
                    android:centerY="1.0"
                    android:endColor="#F3F4F5"
                    android:startColor="#F3F4F5" />
            </shape>
        </item>
        <item android:id="@android:id/progress">
            <clip>
                <shape>
                    <corners android:radius="5dip" />
                    <gradient
                        android:angle="0"
                        android:endColor="#00BB9A"
                        android:startColor="#00BB9A" />
                </shape>
            </clip>
        </item>
    </layer-list>
